.my-list{
  display: flex;
  font-size: 30rpx;
  margin: 0 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx 24rpx;
  box-shadow: 0 4rpx 48rpx 0 #ffe9c8; /*#ffe9c8;*/
}
.my-item{
  flex: 1;
  text-align: center;
}
.my-num{
  
  font-family: "圆体";
  font-weight: 600;
  color: #6D3A07;
  font-size: 40rpx;
}
.notice{
  background-color: #eee;
  color: #999;
  margin: 0 32rpx;
  font-size: 28rpx;
  padding: 10rpx;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
} 
.notice-image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.content{
  padding-bottom: 6rem;
}
.panel{
  margin: 0;
}
.panel-title{
  background-color: #f5f5f5;
  padding:6rpx 32rpx;
  font-size: 36rpx;
  color:#666;
}
.panel:first-child .panel-title{
  display: none;
}
.media-box{
  display: flex;
  /* height: 200rpx; */
  background-color: #fff;
  align-items: center;
  text-align: justify;
  width: 100%;
  overflow: hidden;
}
.media-content{
  width: 100%;
  margin-right: 0;
  /* -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(300rpx);
  transform: translateX(300rpx);
  margin-left: -300rpx; */
  display: flex;
  padding: 24rpx 5vw;
  align-items: center;
}
.media-delete{
  height: 100%;
  display: flex;
  text-align: center;
  align-items: center;
  color: #fff;
  font-size: 34rpx;
  background-color: #FFB13B;
}

.media-delete-item{
  flex: 1;
  height: 100%;
  justify-items: center;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.media-delete-item-warm{
  background-color: orangered;
}
.media-active .media-content,.media-active .media-delete{
  -webkit-transform: translateX(0);
  transform: translateX(0rpx);
}

.media-hd{
  width: 180rpx;
  height: 152rpx;
  margin-right: 32rpx;
}
.media-hd image{
  width: 100%;
  height: 100%;
}
.media-bd{
  flex:1;
}
.media-des{
  font-size: 28rpx;
  padding-right: 32rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.media-title{
  color: #333;
  font-size: 36rpx;
  /* font-weight: bold; */
  margin-bottom: 12rpx;
}

.touch-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  margin-bottom: 10rpx;
  background: #f5f5f5;
  height: 216rpx;
}

.content-item {
  width: 100%;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

.del {
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #000;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  font-size: 35rpx;
}
.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
.hide{
  display: none;
}

.switch{
  float: right;
  background-color: #ccc;
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  position: relative;
}
.switch-active{  
  background-color: #FFB13B;
}
.switch::after{
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  content: ' ';
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #fff;
}
.switch-active::after{
  right: 10rpx;
  left: auto;
}
.top-img{
  width:90%;
  margin:5vw;
}

.cur{
  border-bottom:4rpx solid;
}
.gouxuan{
  width:2rem;
  margin-right: 0.8rem;
}
.media-des,.media-title{
  word-break: break-all;
}
