/* pages/life/index.wxss */
.video-thumb {
  display: flex;
}

.cu-item {
  min-width: 8rem;
  flex: 1;
}

.cu-card>.cu-item {
  margin: 10rpx;
}

.play {
  position: absolute;
  color: #fff;
  font-size: 80rpx;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.cover-box {
  width: 200rpx;
  min-width: 200rpx;
  max-width: 200rpx;
  height: 250rpx;
  line-height: 250rpx;
  text-align: center;
}

.cover-img {
  width: 100%;
  max-height: 100%;
  vertical-align: top;
}
.text-news{
  width:0;
}
.text-des {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  word-wrap: break-word;
}