<page-meta root-font-size="{{systemFontSize}}"></page-meta>
<navBar title='一生相伴' iconTheme="white" color="#fff" back="true">
  <topTips show="{{show}}" msg="{{msg}}" type="{{type}}"></topTips>
  
  <view class="padding-xl margin radius-xl" style="background-color: #e99149;">
    <view class="padding-tb text-center text-xxl main-title">一生相伴</view>
  </view>
  <view class="flex text-center align-center" bindtap="develop">
    <view class="bg-gradual-orange flex-sub margin-lr padding radius-xl">全家福定制</view>
    <view class="bg-gradual-pink flex-sub margin-lr padding radius-xl">时光相册</view>
  </view>

  <view class="cu-list menu solid-bottom margin-top">
    <navigator url="/pages/life/index?source=1" class="cu-item arrow">
      <view class="content">
        <text class="cuIcon-titles text-orange"></text>热门帖子
      </view>
      <view class="action">
        <text class="text-grey text-df">查看全部</text>
      </view>
    </navigator>
  </view>


  <view class="cu-list menu-avatar">
    <navigator url="/pages/life/detail?id={{item.id}}" class="cu-item" wx:for="{{datas}}" wx:key="index">
      <view class="cu-avatar lg" style="background-image:url({{item.imgs[0].cover}});"></view>
      <view class="content flex-sub">
        <view class="text-grey">
        <text class="text-cut">{{item.msg}}
        </text>
        </view>
        <view class="text-gray text-sm flex justify-between">
          {{item.createTime}}
          <view class="text-gray text-sm">
            <text class="cuIcon-favorfill margin-lr-xs"></text> {{item.counts[3]||0}}
            <text class="cuIcon-appreciatefill margin-lr-xs"></text> {{item.counts[1]||0}}
            <text class="cuIcon-messagefill margin-lr-xs"></text> {{item.counts[2]||0}}
          </view>
        </view>
      </view>
    </navigator>
  </view>

</navBar>