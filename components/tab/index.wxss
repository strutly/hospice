
movable-area {
  position: fixed;
  width: 100%;
  height:100%;
  top: 0;
  bottom:0;
  left:0;
  right:0;
  z-index: 100;
  pointer-events: none;
}
movable-view {
  pointer-events: auto;
  /* padding:20rpx 30rpx 20rpx 20rpx; */
  background-color: rgba(249,175,100, 0.5);
  /* border-radius: 0 80rpx 80rpx 0 ; */
  z-index: 100000000;  
  width:auto;
  height:auto;
  /* width: 160rpx;
  height: 160rpx; */
  text-align: center;
  
  color: var(--orange);
  /* border-radius: 160rpx; */
  
  border-radius:100%;
}
